<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home_fragment">

    <ImageView
        android:id="@+id/PillolaPic"
        android:layout_width="99dp"
        android:layout_height="102dp"
        android:layout_marginStart="84dp"
        android:src="@drawable/pillola"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintStart_toEndOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="193dp"
        android:layout_height="61dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/Benvento" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="160dp"
        android:layout_height="22dp"
        android:layout_marginStart="32dp"
        android:text="@string/Inizio"
        app:layout_constraintBottom_toTopOf="@+id/PillolaPic"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        tools:text="@string/Inizio" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="160dp"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="124dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:text="@string/Inizio" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="99dp"
        android:layout_height="102dp"
        android:layout_marginStart="44dp"
        android:src="@drawable/caduceus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />
</android.support.constraint.ConstraintLayout>